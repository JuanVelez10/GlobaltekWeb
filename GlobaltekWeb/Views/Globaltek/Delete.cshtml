@model Domain.Dtos.BillInfo

@{
    ViewData["Title"] = "Delete";
}


<div class="row">

    <div class="col-md-4"></div>

    <div class="col-md-4">

        <img src="/image/Logo.png" class="Logo">

        <div class="white panel">
            <h3 align="center">¿Are you sure you want to delete this invoce?</h3>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Number)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Number)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Person")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NamePerson)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Documen")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DocumenPerson)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("Payment")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentType)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SubTotal)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SubTotal)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Discount %")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Discount.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Discount $")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DiscountTotal)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Tax %")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tax.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Tax $")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TaxTotal)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Total)
                </dd>
            </dl>
        </div>


        <div align="center">
            <br/>
            <form asp-action="DeleteInfo">
                <input asp-for="@Model.Id" value="@Model.Id" class="Hide" />
                <input align="center" type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <br />
            <form asp-action="Home">
                <input align="center" type="submit" value="Back" class="btn btn-success" />
            </form>
        </div>

    </div>

    <div class="col-md-4"></div>

</div>

