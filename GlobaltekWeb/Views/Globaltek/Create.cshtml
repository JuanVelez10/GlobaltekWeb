@model Domain.Dtos.BillInfo

@{
    ViewData["Title"] = "Create";
}


<div class="row">

    <div class="col-md-4"> </div>


    <div class="col-md-4">

        <img src="/image/Logo.png" class="Logo">

        <h4 class="whiteText">Create Invoce</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control textData" min="@DateTime.Now" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentType" class="control-label"></label>
                @Html.DropDownList("PaymentType", (IEnumerable<SelectListItem>)ViewBag.listPaymentType, htmlAttributes: new { @class = "form-control textData" })
            </div>

            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <input asp-for="PersonId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TaxId" class="control-label"></label>
                <input asp-for="TaxId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DiscountId" class="control-label"></label>
                <input asp-for="DiscountId" class="form-control" />
            </div>



            <br />
            <div class="form-group" align="center">
                <input type="submit" value="Create" class="btn btn-primary" align="center" />
            </div>
        </form>
        <br />
        <div align="center">
            <form asp-action="Home">
                <input align="center" type="submit" value="Back" class="btn btn-success" />
            </form>
        </div>

    </div>


    <div class="col-md-4"> </div>

</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
