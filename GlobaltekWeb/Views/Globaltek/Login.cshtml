@model Domain.References.LoginRequest

@{
    ViewData["Title"] = "Login";
}


<div class="row">

    <div class="col-md-4"> </div>

    <div class="col-md-4">
        <br />
        <br />

        <img src="/image/Logo.png" class="Logo">

        @if (!string.IsNullOrEmpty(ViewBag.LoginError))
        {
            <div class="alert alert-danger" align="center">
                <strong>@ViewBag.LoginError</strong>
            </div>
        }

        <form asp-action="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger2"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control textData" />
                <span asp-validation-for="Email" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Passwork</label>
                <input asp-for="Password" type="password" class="form-control textData" />
                <span asp-validation-for="Password" class="text-danger2"></span>
            </div>
                    <br />
            <div class="form-group" align="center">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
                <br />
        <div align="center">
            <form asp-action="Signup">
                <input align="center" type="submit" value="Sign in" class="btn btn-success" />
            </form>
        </div>

    </div>

    <div class="col-md-4"></div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
